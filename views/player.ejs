        .container {
            background: rgba(9, 0, 0, 0.1);
            backdrop-filter: blur(100px);
            padding: 20px;
            border-radius: 15px;
            width: 60%;
            margin: auto;
            box-shadow: 0px 0px 15px rgba(0, 255, 255, 0.6);
        }

        .player-list {
            display: flex;
