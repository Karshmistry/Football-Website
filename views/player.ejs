        .update-btn {
            background: linear-gradient(45deg, #00ff99, #0066ff);
            color: white;
            padding: 12px 20px;
            border: none;
            cursor: pointer;
            border-radius: 8px;
            font-size: 16px;
            transition: 0.3s ease;
            margin-top: 10px;
            box-shadow: 0px 0px 10px rgba(0, 255, 255, 0.5);
        }

        .update-btn:hover {
            transform: scale(1.1);
            box-shadow: 0px 0px 20px rgba(0, 255, 255, 0.8);
        }

        input {
            width: 50%;
            text-align: center;
            padding: 8px;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            outline: none;
            transition: 0.3s ease;
        }
    </style>
</head>
<body>

