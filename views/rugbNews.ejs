<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rugby News - Live Updates</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #111;
      color: #f5f5f5;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #00ffcc;
      text-shadow: 1px 1px 4px black;
    }

    .news-container {
      display: flex;
      flex-direction: column;
      gap: 20px;
      max-width: 900px;
      margin: auto;
    }

    .article {
      background: #1e1e1e;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 4px 12px rgba(0, 255, 204, 0.2);
      transition: transform 0.2s;
    }

    .article:hover {
      transform: scale(1.02);
    }

    .article h3 {
      margin: 0;
      font-size: 1.3em;
      color: #00ffff;
    }

    .article p {
      margin: 10px 0;
      font-size: 0.95em;
      line-height: 1.5;
      color: #ddd;
    }

    .article a {
      display: inline-block;
      margin-top: 10px;
      color: #00ffcc;
      text-decoration: none;
    }

    .article a:hover {
      text-decoration: underline;
    }

    .loading {
      text-align: center;
      margin-top: 30px;
      font-size: 1.2em;
      color: #aaa;
    }
  </style>
</head>
<body>
  <h1>üèâ Rugby News - Live Updates</h1>
  <div class="news-container" id="newsContainer">
    <p class="loading">Fetching latest rugby headlines...</p>
  </div>

  <script>
    const apiKey = "cf08df2bfa754753b90b233a4bafc7f0"; // üîë Replace this with your actual API key from https://newsapi.org/
    const newsContainer = document.getElementById("newsContainer");

    fetch(`https://newsapi.org/v2/everything?q=rugby&sortBy=publishedAt&language=en&pageSize=10&apiKey=${apiKey}`)
      .then(response => response.json())
      .then(data => {
        newsContainer.innerHTML = ""; // Clear loading text

        if (data.articles && data.articles.length > 0) {
          data.articles.forEach(article => {
            const newsElement = document.createElement("div");
            newsElement.classList.add("article");

            newsElement.innerHTML = `
              <h3>${article.title}</h3>
              <p>${article.description || "No description available."}</p>
              <a href="${article.url}" target="_blank">Read more ‚Üí</a>
            `;

            newsContainer.appendChild(newsElement);
          });
        } else {
          newsContainer.innerHTML = "<p>No rugby news found.</p>";
        }
      })
      .catch(error => {
        console.error("Error fetching news:", error);
        newsContainer.innerHTML = "<p>Error loading news. Please try again later.</p>";
      });
  </script>
</body>
</html>